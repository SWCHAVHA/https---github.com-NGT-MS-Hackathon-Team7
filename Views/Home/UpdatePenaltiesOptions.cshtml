@model List<Penalty_Calculation1.Models.Transaction>

@{
    ViewData["Title"] = "Update Penalties";
}

<!DOCTYPE html>
<html>

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
    <style>
        h1 {
            color: black;
            font-weight: bold;
            text-align: center;
            font-size: 20px;
        }

        p {
            font-size: 14px;
            font-family: Arial, sans-serif;
        }

        button {
            font-size: 12px;
            font-weight: 700;
            background-color: lightgreen;
            cursor: pointer;
            padding: 8px 16px;
        }

        .button-space {
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <h1>Update Penalties</h1>

    <div style="display: flex; justify-content: space-between;">
        <form method="post" action="/Home/UpdateSelectedPenalties">
            <p>Click on the "Update" button to update selected penalties.</p>
            <button type="submit">Update</button>
        </form>

        <form method="post" action="/Home/RemoveSelectedPenalties">
            <p>Click on the "Remove" button to remove selected penalties.</p>
            <button type="submit">Remove</button>
        </form>
    </div>

</body>












